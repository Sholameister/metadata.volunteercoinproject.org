rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Allow read for everyone (optional)
    match /{document=**} {
      allow read: if true;
    }

    // Restrict write access to authenticated users
    match /users/{userId} {
      allow write: if request.auth != null && request.auth.uid == userId;
      allow read: if true;
    }

    // Allow writing to volunteerSessions and KYC records only if signed in
    match /volunteerSessions/{docId} {
      allow read, write: if request.auth != null;
    }

    match /kycRecords/{docId} {
      allow read, write: if request.auth != null;
    }
  }
}